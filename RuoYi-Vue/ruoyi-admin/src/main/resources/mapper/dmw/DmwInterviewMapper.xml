<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.dmw.mapper.DmwInterviewMapper">

    <!-- 映射查询结果到 DmwInterview 实体类 -->
    <resultMap type="DmwInterview" id="DmwInterviewResult">
        <result property="interviewId"    column="interview_id"    />
        <result property="studentId"    column="student_id"    />
        <!-- 映射学生姓名 -->
        <result property="studentName"  column="student_name"    />
        <result property="interviewTime"    column="interview_time"    />
        <result property="location"    column="location"    />
        <result property="participants"    column="participants"    />
        <result property="recorder"    column="recorder"    />
        <result property="content"    column="content"    />
        <result property="attachmentUrl"    column="attachment_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <!-- 使用 left join 关联学生表，并为表设置别名 i 和 s -->
    <sql id="selectDmwInterviewVo">
        select i.interview_id, i.student_id, s.student_name, i.interview_time, i.location, i.participants, i.recorder, i.content, i.attachment_url, i.create_by, i.create_time, i.update_by, i.update_time, i.remark
        from dmw_interview i
                 left join dmw_student s on i.student_id = s.student_id
    </sql>

    <!-- 根据查询条件筛选面试记录 -->
    <select id="selectDmwInterviewList" parameterType="DmwInterview" resultMap="DmwInterviewResult">
        <include refid="selectDmwInterviewVo"/>
        <where>
            <!-- 根据 studentId 过滤 -->
            <if test="studentId != null "> and i.student_id = #{studentId}</if>
            <!-- 根据 studentName 过滤 -->
            <if test="studentName != null and studentName != ''"> and s.student_name like concat('%', #{studentName}, '%')</if>
            <!-- 排除特定角色 -->
            <if test="params.excludeRoleKey != null">
                and not exists (
                select 1
                from sys_user su
                join sys_user_role sur on su.user_id = sur.user_id
                join sys_role sr on sur.role_id = sr.role_id
                where su.user_name = i.create_by
                and sr.role_key = #{params.excludeRoleKey}
                )
            </if>
        </where>
    </select>

    <!-- 根据面试 ID 获取面试详情 -->
    <select id="selectDmwInterviewByInterviewId" parameterType="Long" resultMap="DmwInterviewResult">
        <include refid="selectDmwInterviewVo"/>
        <where>
            <!-- 使用面试 ID 过滤 -->
            where i.interview_id = #{interviewId}
        </where>
    </select>

    <!-- 以下为增、改、删操作 -->

    <insert id="insertDmwInterview" parameterType="DmwInterview" useGeneratedKeys="true" keyProperty="interviewId">
        insert into dmw_interview
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="studentId != null">student_id,</if>
            <if test="interviewTime != null">interview_time,</if>
            <if test="location != null">location,</if>
            <if test="participants != null">participants,</if>
            <if test="recorder != null">recorder,</if>
            <if test="content != null">content,</if>
            <if test="attachmentUrl != null">attachment_url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="studentId != null">#{studentId},</if>
            <if test="interviewTime != null">#{interviewTime},</if>
            <if test="location != null">#{location},</if>
            <if test="participants != null">#{participants},</if>
            <if test="recorder != null">#{recorder},</if>
            <if test="content != null">#{content},</if>
            <if test="attachmentUrl != null">#{attachmentUrl},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateDmwInterview" parameterType="DmwInterview">
        update dmw_interview
        <trim prefix="SET" suffixOverrides=",">
            <if test="studentId != null">student_id = #{studentId},</if>
            <if test="interviewTime != null">interview_time = #{interviewTime},</if>
            <if test="location != null">location = #{location},</if>
            <if test="participants != null">participants = #{participants},</if>
            <if test="recorder != null">recorder = #{recorder},</if>
            <if test="content != null">content = #{content},</if>
            <if test="attachmentUrl != null">attachment_url = #{attachmentUrl},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where interview_id = #{interviewId}
    </update>

    <delete id="deleteDmwInterviewByInterviewId" parameterType="Long">
        delete from dmw_interview where interview_id = #{interviewId}
    </delete>

    <delete id="deleteDmwInterviewByInterviewIds" parameterType="String">
        delete from dmw_interview where interview_id in
        <foreach item="interviewId" collection="array" open="(" separator="," close=")">
            #{interviewId}
        </foreach>
    </delete>
</mapper>
